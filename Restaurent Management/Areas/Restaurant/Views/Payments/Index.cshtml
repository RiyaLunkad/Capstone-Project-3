@model IEnumerable<Hotel.Web.Models.Payment>

@{
    ViewData["Title"] = "Payment Method";
}

<h1>Payment Method</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
 <table class="table table-bordered table-striped">

    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PaymentMethods)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentMethods)
            </td>
            <td>
                <a class="bg-primary text-white" asp-action="Edit" asp-route-id="@item.OrderDetailId">Edit</a> |
                <a class="bg-warning text-white" asp-action="Details" asp-route-id="@item.OrderDetailId">Details</a> |
                <a class="bg-danger text-white"asp-action="Delete" asp-route-id="@item.OrderDetailId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
